@model X.PagedList.IPagedList<HCM.Web.ViewModels.Employee.EmployeeUserViewModel>

@{
    ViewData["Title"] = "Employees";
    var isManager = ViewBag.IsManager as bool? ?? false;
    var departmentName = ViewBag.DepartmentName as string ?? "All Employees";
}


<link rel="stylesheet" href="~/css/employee-index.css" />
<div class="container">
    <div class="header">
        <h1>@departmentName</h1>
            <div class="header-buttons">
        @if (!isManager)
        {
        <a asp-action="Create" class="add-btn" title="Add New Employee">Create</a>
        }
        <a href="/" class="back-btn">Back</a></div>
    </div>

    <div class="table-container">
        <table class="employee-table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Role</th>
                    <th>Department</th>
                    <th>Job Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.UserEmail</td>
                        <td>@employee.Salary.ToString("C")</td>
                        <td>@employee.UserRole</td>
                        <td>@employee.JobTitle</td>
                        <td>@employee.Department</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@employee.UserId" class="edit-btn">Edit</a>
                            @if (!isManager)
                            {
                                <form asp-action="Delete" asp-route-id="@employee.UserId" method="post" style="display:inline;">
                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                            </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

        <div class="pagination">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" class="page-number">&laquo;</a>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <a asp-action="Index" asp-route-page="@i" class="page-number @(i == Model.PageNumber ? "active" : "")">@i</a>
            }
            @if (Model.HasNextPage)
            {
                <a asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" class="page-number">&raquo;</a>
            }
        </div>
</div>
