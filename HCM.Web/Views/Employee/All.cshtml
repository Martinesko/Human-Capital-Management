@model EmployeeAllViewModel

@{
    ViewData["Title"] = "Employees";
}

<div class="container">
    <div class="header">
        <h1>Employees</h1>
        <div class="header-buttons">
            @if (!User.IsInRole(ManagerRoleName))
            {
                <a asp-controller="Employee" asp-action="Create" class="add-btn">Create</a>
            }
            <a asp-controller="Home" asp-action="Index" class="back-btn">Back</a>
        </div>
    </div>

    <div class="table-container">
        <table class="employee-table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Role</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Salary.ToString("C")</td>
                        <td>@employee.Role</td>
                        <td>@employee.JobTitle</td>
                        <td>@employee.Department</td>
                        <td>
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId" class="edit-btn">Edit</a>
                            @if (!User.IsInRole(ManagerRoleName))
                            {
                                <form asp-controller="Employee" asp-action="Delete" asp-route-UserId="@employee.UserId" asp-route-employeeId="@employee.EmployeeId" method="post" style="display:inline;">
                                    <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Employees.Any())
    {
        @Html.PagedListPager(Model.Employees,
                CurrentPage => Url.Action("All", "Employee", new
                {
                    CurrentPage,
                }),
                new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        MaximumPageNumbersToDisplay = 3
    })
        ;
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/employee-index.css" />
}