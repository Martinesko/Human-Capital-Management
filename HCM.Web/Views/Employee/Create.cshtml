@model EmployeeCreateFormModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="header">
        <h1>Create Employee</h1>
    </div>

    <div class="form-container">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName"
                       class="form-control" />
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName"
                       class="form-control" />
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle"></label>
                <input asp-for="JobTitle"
                       class="form-control" />
                <span asp-validation-for="JobTitle" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId"
                        asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))"
                        class="form-control"></select>
                <span asp-validation-for="DepartmentId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <select asp-for="RoleName"
                        asp-items="@(new SelectList(ViewBag.Roles))"
                        class="form-control"></select>
                <span asp-validation-for="RoleName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email"
                       class="form-control" />
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password"
                       type="password"
                       class="form-control" />
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-success">
                    Create
                </button>
                <a asp-controller="Employee" asp-action="All" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/employee-create.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
