@{
    ViewData["Title"] = "Home page";
}
@model HCM.Web.ViewModels.Employee.EmployeeInfoViewModel

@if ( Model != null)
{
    if (Model.IsPasswordChanged == false )
    {
        <div class="alert alert-warning">
            You have not changed your password yet. Please update it for better security.
        </div>
    }
}
@if (ViewBag.IsHrAdmin == true || ViewBag.IsManager == true && ViewBag.ShowProfile == false)
{
    <div class="hcm-login-center">
        <div class="employee-info-card">
            <h1>Action Panel</h1>
            <div class="hcm-login-form">
            </div>
            <div class="employee-info-actions">
                <a asp-controller="Employee" class="employee-info-btn-yellow">
                    Manage employees
                </a>
                @if (ViewBag.IsManager == true)
                {
                    <a asp-controller="Home" asp-action="Index" asp-route-showProfile="true" class="employee-info-btn-change">
                        View Profile
                    </a>
                }
                else if (ViewBag.IsManager == false)
                {
                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="employee-info-btn-change">
                        Change password
                    </a>
                }
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="employee-info-btn-logout">Log Out</button>
                </form>
            </div>
        </div>
    </div>


    @if (ViewBag.ShowProfile == true && Model != null)
    {
        <div class="hcm-login-center">
            <div class="employee-info-card">
                <h1>Personal Information</h1>
                <p class="hcm-login-subtitle">View your personal details below.</p>
                <div class="hcm-login-form">
                    <div><strong>Full Name:</strong> @Model.FullName</div>
                    <div><strong>Email:</strong> @Model.</div>
                    <div><strong>Role:</strong> @Model.UserRole</div>
                    <div><strong>Department:</strong> @Model.Department</div>
                    <div><strong>Job Title:</strong> @Model.JobTitle</div>
                    <div><strong>Salary:</strong> @Model.Salary.ToString("C")</div>
                </div>
            </div>
        </div>
    }
}
else if (Model != null)
{
    <div class="hcm-login-center">
        <div class="employee-info-card">
            <h1>Personal Information</h1>
            <p class="hcm-login-subtitle">View your personal details below.</p>
            <div class="hcm-login-form">
                <div><strong>Full Name:</strong> @Model.FullName</div>
                <div><strong>Email:</strong> @Model.Email</div>
                <div><strong>Role:</strong> @Model.UserRole</div>
                <div><strong>Department:</strong> @Model.Department</div>
                <div><strong>Job Title:</strong> @Model.JobTitle</div>
                <div><strong>Salary:</strong> @Model.Salary.ToString("C")</div>
            </div>
            <div class="employee-info-actions">
                <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="employee-info-btn-change">
                    Change Password
                </a>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="employee-info-btn-logout">Log Out</button>
                </form>
                @if (ViewBag.IsManager == true)
                {
                    <a href="/" class="btn btn-secondary">Back</a>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="hcm-home-center-unauth">
        <h1 class="hcm-home-title">Human Capital Management</h1>
        <p class="hcm-home-lead">Empowering your organization to manage people, departments, and HR processes efficiently.</p>
        <a href="/Identity/Account/Login" class="hcm-home-login-btn mt-4">Login to your account</a>
    </div>
}
